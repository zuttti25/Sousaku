<% visitor = notification.visitor %>
<% post = notification.post %>
<% @visitor = notification.visitor %>

<div>
  <span>
  <%= link_to user_path(notification.visitor), remote: true do %>
    <%= attachment_image_tag visitor, :image, format: 'jpg', size: "50x50", fallback:"no_image.png", class: "rounded-circle" %>
  <% end %>
  </span>

    <% case notification.action %>
      <% when "follow" then %>
          <span data-dismiss="modal">
        <%= link_to user_path(@visitor),style: "font-weight: bold;", remote: true do %>
            <%= notification.visitor.name %>
        <% end %>
            があなたをフォローしました。
          </span>

      <% when "like" then %>
        <span data-dismiss="modal">
          <%= link_to user_path(@visitor),style: "font-weight: bold;", remote: true do %>
            <%= notification.visitor.name %>
          <% end %>
           が
          <%= link_to "あなたの投稿", post_path(notification.post), style: "font-weight: bold;", remote: true %>
           にいいねしました。
        </span>


       <% when "comment" then %>
         <span data-dismiss="modal">
        <%= link_to user_path(@visitor),style: "font-weight: bold;", remote: true do %>
            <%= @visitor.name %>
          <% end %>
          が
           <%= link_to "あなたの投稿", post_path(notification.post), style: "font-weight: bold;", remote: true %>
           にコメントしました。
          </span>
    <% end %>



</div>