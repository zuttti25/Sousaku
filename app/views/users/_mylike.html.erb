<div class="row">
  <% if my_like.exists? %>
   <% my_like.each do |like| %>
    <div class="col-3">

    <div class ="profile_image">
       <%= link_to user_path(like.post.user), remote: true do %>
         <%= attachment_image_tag like.post.user, :image, format: 'jpg', size: "50x50", fallback:"no_image.png", class: "rounded-circle" %>
       <% end %>
    </div>

      <%= link_to post_path(like.post), remote: true do %>
        <p><%= like.post.title %></p>
      <% end %>

      <p>いいね件数: <%= like.post.likes.count %></p>
      <p><%= link_to "#{like.post.comments.count} コメント", post_path(like.post),remote: true %></p>
      <% like.post.tags.each do |tag| %>
      <span><i class="fas fa-tags"></i></span>
      <span><p><%= link_to tag.tag_name, posts_path(tag_id: tag.id) %></p></span>
      <% end %>
    </div>
   <% end %>
  <% else %>
  <div class="col-12 no_text">
    <h2>
      興味のある活動はまだありません
    </h2>
  </div>
  <% end %>
</div>