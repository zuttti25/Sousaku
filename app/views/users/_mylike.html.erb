<div class="top-memo">
  <% if my_like.exists? %>
    <% my_like.each do |like| %>
      <div class="memox">
      <h3>
        <%= link_to post_path(like.post), remote: true do %>
          <%= like.post.title %>
        <% end %>
      </h3>

      <p>活動内容：<%= like.post.product.truncate(30) %></p>

       <p>使用SKILL：<%= like.post.skill.truncate(30) %></p>

      <i class="fas fa-heart like-btn"></i><%= like.post.likes.count %>
      <i class="far fa-eye"></i><%= like.post.impressions_count %>
      <span><%= link_to "#{like.post.comments.count} コメント", post_path(like.post),remote: true %></span>
      <br>

        <div class ="profile_image">
          <%= link_to user_path(like.post.user), remote: true do %>
            <%= attachment_image_tag like.post.user, :image, format: 'jpg', size: "45x45", fallback: "no_image.png", class: "rounded-circle" %>
            <%= like.post.user.name %>
          <% end %>
        </div>

      <span><i class="fas fa-tags"></i></span>
      <% like.post.tags.each do |tag| %>
      <span><%= link_to tag.tag_name, posts_path(tag_id: tag.id), class: "btn btn-outline-secondary", remote: true %></span>
      <% end %>

    </div>
   <% end %>
  <% else %>
  <div class="col-12 no_text">
    <h2>
      興味のある活動はまだありません
    </h2>
  </div>
  <% end %>
</div>