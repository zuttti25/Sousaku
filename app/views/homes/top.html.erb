<div class="container">


    <div class="board">
      <%= render 'boards/board', boards: @boards %>
    </div>

      <%#= paginate @boards, remote: true %>

  <div class="row top-button">
    <div class="col">
      <%= link_to "活動実績ランキング↓↓", popular_path, remote: true, class: 'btn btn-nav2' %>
    </div>
    <div class="col">
      <%= link_to "新着の活動実績↓↓", pickup_path, remote: true, class: 'btn btn-nav2' %>
    </div>
    <div class="col">
      <%= link_to "話題のクリエイター↓↓", users_path, remote: true, class: 'btn btn-nav2' %>
    </div>
  </div>

  <% if @popular.present? %>
    <div class="top_area">
      <%= render "posts/popular", popular: @popular %>
    </div>
  <% elsif  @pickup.present? %>
    <div class="top_area">
      <%= render "posts/pickup" , pickup: @pickup %>
    </div>
  <% else %>
    <div class="top_area">
      <%= render "users/index" , users: @users %>
    </div>
  <% end %>


</div>